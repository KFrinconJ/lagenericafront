<%- include("../components/head", {tituloWeb: 'Ingreso Sistema'}) %>

<form class="form-signin" method="POST">
	<img class="mb-4" src="" alt="Logo" width="72" height="72" />
	<h1 class="h1 mb-3 font-weight-normal">
		Sucursal <%= loacalizacion_sucursal %>
	</h1>
	<h2 class="h3 mb-3 font-weight-normal">Acceso al Sistema</h2>
	<% if(typeof(alerta)!= "undefined" && alerta.length > 0 ) { %>
	<div class="alert alert-danger"><%=alerta%></div>
	<% } %>

	<label for="usuario" class="sr-only">Usuario</label>
	<input
		type="text"
		id="usuario"
		class="form-control"
		placeholder="Usuario"
		name="usuario"
		required
		autofocus
	/>
	<label for="contraseña" class="sr-only">Contraseña</label>
	<input
		type="password"
		id="contraseña"
		class="form-control"
		placeholder="Contraseña"
		name="contraseña"
		required
	/>
	<button class="btn btn-lg btn-primary btn-block" type="submit">
		Aceptar
	</button>
</form>

<%- include("../components/footer") %>
